<Styles
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border
          Classes="container-product"
          Width="50" Height="50"
          Margin="20" />
    </Design.PreviewWith>

    <Style Selector="Border.container">
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="Background" Value="#6d6a6a" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="#858385" />
    </Style>

    <Style Selector="Border.container-product">
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="Background" Value="#ccc9c9" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="#ffffff" />
    </Style>
</Styles>